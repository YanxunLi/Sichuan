/*主容器*/  
.stepper {  
    width: 100%;  
    height: 100%;  
    /*给主容器设一个边框*/  
    border-radius: 3px;  
    margin:0 auto;  
}  
  
/*加号和减号*/  
.stepper text {  
    width: 40rpx;  
    line-height: 40rpx;  
    text-align: center;  
    float: left;  
    border-radius: 4rpx;
    background: #f0f0f0;
}  
.act_jis{
  color: #4fbafe !important;
  background: #ccebff !important;
}  
/*数值*/  
.stepper input {  
    width: 45rpx;  
    height: 40rpx;  
    float: left;  
    margin: 0 auto;  
    line-height: 40rpx;
    text-align: center;  
    font-size: 30rpx;  
    min-height:40rpx;
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
} 


