.ershi{
  height: 191rpx;
  margin: 20rpx 24rpx;
  padding: 20rpx 21rpx 0rpx;
}
.qishi{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
}
.qishi>image{
  width: 26rpx;
  height: 34rpx;
  display: inline-block;
  vertical-align: middle;
}
.zidsa{
  display: inline-block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 500rpx;
  vertical-align: middle;
}
.dh_icon{
  width: 90rpx;
  height: 100%;
  background: #fff;
  border-left: 2rpx solid #f0f0f0;
}
.dh_icon>image{
  width: 49rpx;
  height: 51rpx;
  display: block;
}
.pdyusa{
  padding: 20rpx 24rpx 0rpx;
}
.cexing>image{
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.cexing>view{
  vertical-align: middle;
  display: inline-block;
}
.sansi{
  position: relative;
  overflow: hidden;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.sansi>image{
  width: 210rpx;
  height: 180rpx;
  display: block;
  position: absolute;
}
.jindon{
  position: relative;
  min-height: 180rpx;
  padding-left: 240rpx;
  height: auto;
}
.jindon>view:nth-of-type(1){padding-top: 36rpx;}
.jindon>view:nth-of-type(2){padding-top: 10rpx;}
.lin78{
  line-height: 78rpx;
}
.lin66{line-height: 66rpx;}