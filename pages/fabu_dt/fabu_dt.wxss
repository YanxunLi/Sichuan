page{
  background: #Fff;
}
.q-image-wrap{
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}
.q-image-remover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background: #2e82ff;
  position: absolute;
  top:-50rpx;
  right:-50rpx;
}
.q-image-remover icon{
  position: absolute;
  left:12rpx;
  bottom:12rpx;
  color:#fff;
}
 
.uploadImgBtn{
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  border-radius: 10rpx;
  line-height: 140rpx;
  border:2rpx solid #efefef;
  float: left;
}
.uploadImgBtn icon{
  font-size: 80rpx;
  color: #999;
}
.q-image-wrap>image{
  width: 100%;
  height: 100%;
}
